CREATE EXTENSION failover_slots;
CREATE VIEW public.stable_replslots_cols AS
SELECT slot_name, plugin, slot_type, "database", active, failover
FROM pg_catalog.pg_replication_slots_failover()
ORDER BY slot_name;
